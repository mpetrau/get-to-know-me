<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Please select the traits that are applicable to you:</h1>
      <hr>
      <%= simple_form_for @user_trait do |f| %>
        <%= collection_check_boxes(:user, :traits, @traits, :id, :name) %>
        <br>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>


