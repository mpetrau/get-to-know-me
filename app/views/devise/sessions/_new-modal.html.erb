<div class="modal-content">
  <h2 class="text-center">Log in</h2>
  <div class="row padded-mini text-center">
   <%= link_to '<i class="fa fa-facebook"></i> Login with Facebook'.html_safe, user_facebook_omniauth_authorize_path, {class: 'btn-facebook'} %>
 </div>
 <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="form-inputs">
  <%= f.input :email, required: false, autofocus: true %>
  <%= f.input :password, required: false %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
</div>

<div class="row text-center">
<div class="form-actions">
  <%= f.button :submit, "Log in", { class: 'btn-login'} %>
</div>
</div>
<% end %>

<ul>
  <li><%= link_to 'Not a Member? Sign Up Here', new_user_registration_path %></li>
  <li><%= link_to 'Forgot Password?', new_user_password_path %></li>
</ul>
</div>
