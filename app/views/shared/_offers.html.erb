<div class="container">
  <h1><%= t('offer.heading') %></h1>
  <div class="row">
    <% @offers.each do |offer| %>
    <div class="col-xs-12 col-sm-4">
     <div>
        <div class ="card">
         <div class="offer">
          <h2><%= offer.deal.name %></h2>
          <p><%= offer.deal.discount %></p>
          <div class="offer-actions hidden">
           <i class="fa fa-heart" aria-hidden="true"></i>
           <i class="fa fa-trash" aria-hidden="true"></i>
           <i class="fa fa-times" aria-hidden="true"></i>
           <a href=""><i class="fa fa-expand flip" aria-hidden="true" ></i></a>
          </div>
         </div>
         <div class="reverse">
          <%= render partial: 'show', locals: { offer: offer }%>
         </div>
       </div>
     </div>
 </div>
 <% end %>
</div>
</div>

