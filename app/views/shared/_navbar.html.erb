<div class="navbar">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "logo.png" %>
  <% end %>

  <!-- Search form -->
<!--     <form action="" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form> -->

    <% if user_signed_in? %>

    <div class="fixed-action-btn horizontal">
      <%= image_tag current_user.facebook_picture_url.nil? ? "#{image_path 'green-happy-face.png'}" : current_user.facebook_picture_url , class: "btn-floating btn-large" %>
      <ul>
        <li class= "tooltipped" data-position = "bottom" data-delay = "50" data-tooltip = "<%= t('.profile', default: 'Favorites') %>" >
          <%= link_to favorites_path, class: "btn-floating waves-effect waves-light" do %>
          <i class="fa fa-heart"></i>%>
          <% end %>
        </li>
        <li class= "tooltipped" data-position = "bottom" data-delay = "50" data-tooltip = " <%= t(".profile", default: "Profile") %>" >
          <%= link_to profile_path(:id), class: "btn-floating"  do %>
          <i class="fa fa-user"></i>
          <% end %>
        </li>
        <li  class= "tooltipped" data-position = "bottom" data-delay = "50" data-tooltip = "  <%= t(".sign_out", default: "Log out") %>" >
          <%= link_to destroy_user_session_path, method: :delete, class: "btn-floating" do %>
          <i class="fa fa-sign-out"></i>
          <% end %>
        </li>
      </ul>
    </div>

  </div>

  <% else %>

  <!-- Login text link -->
  <div class="login-call">
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "home-link" %>
  </div>
  <% end %>

</div>

