<div class="container">
  <div class="row">
    <% if @not_current_user %>
      <div class="col-xs-12">
        <h5 class="page-header">To have the best deals and full functionality, please <%= link_to '<i class="fa fa-facebook"></i> Sign Up with Facebook'.html_safe, user_facebook_omniauth_authorize_path,class: 'btn-facebook btn-facebook-small' %></h5>
      </div>
    <% end %>

    <% @offers.each do |offer| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class ="card small">
        <div class="card-image waves-effect waves-block waves-light">
          <%= image_tag offer.deal.photo%>
        </div>
        <div class="feedback hidden"><%= render partial: 'feedback', locals: { offer: offer} %></div>
        <div class="offer-actions hidden">
          <%= render partial: 'card_menu', locals: { offer: offer } %>
          </div>
        <div class="card-link hidden"><%= link_to(offer.deal.url) %></div>
        <div class="card-content activator">
          <p class="activator"><%= offer.deal.discount %></p>
          <span class="card-title grey-text text-darken-4 activator"><%= offer.deal.name %></span>

       </div>
     <div class="card-reveal deactivator">
      <%= render partial: 'show', locals: { offer: offer }%>
    </div>
  </div>

</div>
<% end %>
</div>

</div>
