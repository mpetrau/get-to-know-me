<div class="container">
  <div class="row">
    <% @offers.each do |offer| %>
    <div class="col-xs-12 col-sm-4">
      <div class ="card small">
        <div class="card-image waves-effect waves-block waves-light">
          <%= image_tag offer.deal.photo%>
          <div class="card-link hidden"><%= link_to(offer.deal.url) %></div>
        </div>
        <div class="feedback hidden"><%= render partial: 'feedback', locals: { offer: offer} %></div>
        <div class="card-content activator">
          <p class="activator"><%= offer.deal.discount %></p>
          <span class="card-title grey-text text-darken-4 activator"><%= offer.deal.name %></span>
          <div class="offer-actions hidden">
            <%= render partial: 'card_menu', locals: { offer: offer } %>
          </div>
       </div>
     <div class="card-reveal deactivator">
      <%= render partial: 'show', locals: { offer: offer }%>
    </div>
  </div>

</div>
<% end %>
</div>

</div>
