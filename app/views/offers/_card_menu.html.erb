  <div>
    <ul class="list-inline">
      <% if offer.liked? == true %>
        <li><i class='fa fa-heart selected' aria-hidden='true'></i></li>
        <li><%= link_to '<i class="fa fa-share-alt" aria-hidden="true"></i>'.html_safe, "#", class: " small-tooltip remove", title: "share"%></li>
        <li><%= link_to '<i class="fa fa-thumbs-down" aria-hidden="true"></i>'.html_safe, offer_path(offer, :disliked? => true ), method: :patch, class: " small-tooltip remove", title: "remove" %></li>
      <% else %>
        <li><%= link_to "<i class='fa fa-heart' aria-hidden='true'></i>".html_safe, offer_path(offer, :liked? => true ), method: :patch, class: " small-tooltip remove", title: "like"%></li>
        <li><%= link_to '<i class="fa fa-share-alt" aria-hidden="true"></i>'.html_safe, "#", class: " small-tooltip remove", title: "share"%></li>
        <li><%= link_to '<i class="fa fa-thumbs-down" aria-hidden="true"></i>'.html_safe, offer_path(offer, :disliked? => true ), method: :patch, class: " small-tooltip remove", title: "remove" %></li>
      <% end %>
    </ul>
  </div>
  <div>
   <ul class="list-inline">
   <li><i class="fa fa-expand activator" aria-hidden="true"></i></li>
   <li><i class="fa fa-compress deactivator" aria-hidden="true" ></i></li>
   </ul>
 </div>
